ui =(pageWithSidebar(
    headerPanel("Test Shiny App"),
    sidebarPanel(
        textInput("sample_text", "test", value = "0"),
        #display dynamic UI
        uiOutput("my_button")),
    mainPanel()
))

server = function(input, output, session){
    #make dynamic button
    output$my_button <- renderUI({
        actionButton("action", label = input$sample_text)
    })
}
runApp(list(ui = ui, server = server))